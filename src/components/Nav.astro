---
import Logo from "./assets/Logo.astro";
import Button from "./Button.astro";
const navItems = [
  {
    label: "About us",
    href: "#",
  },
  {
    label: "Services",
    href: "#",
  },
  {
    label: "Use cases",
    href: "#",
  },
  {
    label: "Pricing",
    href: "#",
  },
  {
    label: "Blog",
    href: "#",
  },
];
---

<nav class="flex justify-between w-full items-center px-5 lg:px-24 pt-10">
  <Logo />
  <div class="md:hidden">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="26"
      height="19"
      viewBox="0 0 26 19"
      fill="none"
    >
      <path
        d="M1 1.80664H25"
        stroke="black"
        stroke-width="2"
        stroke-linecap="round"></path>
      <path
        d="M1 9.80664H25"
        stroke="black"
        stroke-width="2"
        stroke-linecap="round"></path>
      <path
        d="M1 17.8066H25"
        stroke="black"
        stroke-width="2"
        stroke-linecap="round"></path>
    </svg>
  </div>
  <div class="hidden md:flex gap-10 items-center	justify-between">
    {
      navItems.map(({ href, label }) => (
        <a {href} class="capitalize">
          {label}
        </a>
      ))
    }
    <Button className="bg-white hover:bg-brand-dark  hover:text-white transition-colors border border-brand-dark text-brand-dark px-9 py-3">Request a quote</Button>
  </div>
</nav>
