---
const { label, index = null } = Astro.props;
---

<div class="group outline-none" tabindex={index}>
  <div
    class="group group-focus:bg-brand-primary group-focus:shadow-none shadow-card bg-brand-slate group-focus:rounded-b-none  rounded-4xl flex justify-between px-4 py-3 items-center transition-colors ease duration-500 cursor-pointer pr-10 relative"
  >
    <div
      class="flex items-center group-focus:text-brand-dark px-10 pt-10 w-full transition ease duration-500"
    >
      <div
        class="flex pb-10 gap-5 group-focus:border-b border-brand-dark w-full items-center"
      >
        <div class="flex justify-between w-full items-center rouded-full">
          <div class="flex items-center gap-5">
            {
              index && (
                <>
                  <p class="text-6xl font-medium flex items-center">
                    {index}
                  </p>
                  <p class="lg:text-3xl text-lg">{label}</p>
                </>
              )
            }
          </div>
          <div
            class="rounded-full  relative  accodion-chevron border-brand-dark md:border-2 flex tems-center justify-center md:bg-brand-slate h-12 w-12"
          >
          </div>
        </div>
      </div>
    </div>
  </div>
  <div
    class="group-focus:max-h-screen max-h-0 shadow-card rounded-b-4xl bg-brand-slate group-focus:bg-brand-primary px-4 overflow-hidden transition ease duration-500"
  >
    <p class="text-justify text-brand-dark p-10">
      <slot />
    </p>
  </div>
</div>

<style lang="postcss">
    .accodion-chevron::after{
        content: "";
        @apply h-[70%] w-[8px] transform transition-transform  bg-brand-dark absolute left-1/2 -translate-x-1/2 top-1/2 -translate-y-1/2;
    }
    .accodion-chevron::before{
        content: "";
        @apply h-[70%] w-[8px] rotate-90 transform bg-brand-dark absolute left-1/2 -translate-x-1/2 top-1/2 -translate-y-1/2;
    }
    .group:focus-within .accodion-chevron::after {
        @apply rotate-[270deg];
    }
</style>
